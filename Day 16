//Write a program to identify if the number is perfect number or not.
#include <iostream>
using namespace std;
int main() {
 int n, rem, sum = 0;
 cout<<"Enter a number : ";
 cin>>n;
 for (int i = 1; i < n; i++) {
 rem = n % i;
  if (rem == 0) { 
    sum = sum + i;
  }
 }
 if (sum == n)
 cout<<"Perfect Number";
 else
 cout<<"Not a perfect number";
 return 0;
}
