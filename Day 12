//Write a program to find the sum of digits of a number.
#include <iostream>
using namespace std;

int main() {
 int n;
 int sum = 0, count = 0;
 cout<<"Enter a number : ";
 cin>>n;
 while (n > 0) {
    sum = sum + n%10;
    n = n/10;
    count ++;
 }
 cout<<"The sum of digits = "<<sum<<endl;
 cout<<"The number of digits present = "<<count;
 return 0;
}
