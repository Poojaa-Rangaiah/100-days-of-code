//Write a program to find Number of digits in an integer.
#include <iostream>
#include <cmath>
using namespace std;
int main() {
 int n, rem;
 int count = 0;
 cout<<"Enter a number : ";
 cin>>n;
 while(rem > 0) {
    rem = n%10;
    count++;
    n = n/10;
 }
 cout<<"The no. of digits = "<<count - 1;
 return 0;
}
